{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Product catalogue with specifications and descriptions"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "reticle": {
      "type": "text"
    },
    "specifications": {
      "type": "component",
      "repeatable": false,
      "component": "product.specification"
    },
    "descriptions": {
      "type": "component",
      "repeatable": true,
      "component": "product.description-paragraph"
    },
    "price": {
      "type": "decimal",
      "required": false
    },
    "sku": {
      "type": "string",
      "required": false
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}